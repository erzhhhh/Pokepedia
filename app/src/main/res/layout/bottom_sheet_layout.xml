<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.pokepedia.pokemonInfo.PokemonDetailsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/indent_16"
        android:paddingTop="@dimen/indent_24"
        android:paddingEnd="@dimen/indent_16"
        android:paddingBottom="@dimen/indent_24">

        <TextView
            style="@style/HeaderTextStyle_18_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.name}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_12"
            android:text="@{@string/pokemon_height(viewModel.childModel.height)}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_12"
            android:text="@{@string/pokemon_weight(viewModel.childModel.weight)}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/indent_12"
            android:text="@{@string/pokemon_exp(viewModel.childModel.exp)}" />

    </LinearLayout>
</layout>